@model MSLSystem.Models.User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MSL</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/css/adminlte.min.css">
</head>

@* Login Page *@
<body class="d-flex justify-content-center align-items-center vh-100" style="background-color: #CCF2F4;">
    <div class="login-box mx-auto" style="max-width: 400px; width: 100%;">
        <!-- Login Card -->
        <div class="card border-0 shadow-lg p-4 rounded" style="background-color: #F4F9F9;">
            <div class="card-header text-center bg-transparent mb-3">
                <a href="#" class="h1 text-primary"><b>MSL</b></a>
            </div>
            <div class="card-body">
                <p class="text-center text-muted">Sign in to start your session</p>

                 <form action="Login" method="post"> 
                    @* <form asp-action="Index" method="post"> *@
                        <!-- Email input -->
                    <div class="mb-3">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Email" asp-for="E_MAIL" required>
                            <span class="input-group-text">
                                <i class="fas fa-envelope"></i>
                            </span>
                        </div>
                    </div>
                    <!-- Password input -->
                    <div class="mb-3">
                        <div class="input-group">
                            <input type="password" class="form-control" placeholder="Password" asp-for="PASSWORD" required>
                            <span class="input-group-text">
                                <i class="fas fa-lock"></i>
                            </span>
                        </div>
                    </div>
                    <!-- Remember me and Sign in button -->
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="remember">
                            <label class="form-check-label" for="remember">Remember Me</label>
                        </div>
                        <p class="text-center mb-0">
                            <a href="@Url.Action("Index", "FogotPW")" class="text-muted">Forgot password?</a>
                        </p>

                    </div>
                    <!-- Submit button -->
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary w-100">Sign In</button>
                    </div>

                    <!-- Approve button -->
                    <div class="mb-3">
                        <button type="approve" class="btn btn-success w-100"> Request Approve</button>
                    </div>
                </form>

                <div class="text-center my-3">
                    <span class="text-muted">or sign in using</span>
                </div> 

                <!-- Social buttons -->
                <div class="d-flex justify-content-center mb-3">
                    <a href="#" class="btn btn-outline-primary mx-1">
                        <i class="fab fa-facebook"></i> Facebook
                    </a>
                    <a href="#" class="btn btn-outline-danger mx-1">
                        <i class="fab fa-google"></i> Google
                    </a>
                </div>

                <p class="text-center mb-0">
                    <a href="@Url.Action("Index", "Registration")" class="text-muted">Create a new account</a>
                </p>

            </div>
        </div>
    </div>
    <!-- jQuery -->
    <script src="/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/js/adminlte.min.js"> </script>
</body>
</html>
